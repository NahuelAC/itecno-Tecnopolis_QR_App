<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tecnopolis_QR_App.Pass">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pueden pasar"
                   TextColor="#55ACAC"
                   FontSize="60"
                   Padding="0,100,0,0"
                   VerticalOptions="Start" 
                   HorizontalOptions="CenterAndExpand" />
            <Image Source="tick_gif"
                   WidthRequest="100"
                   HeightRequest="100"
                   VerticalOptions="Center"
                   HorizontalOptions="CenterAndExpand"
                ></Image>
            <Label x:Name="PersonsLabel"
                   Text="Holaaaaaaaa"
                   FontSize="40"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"></Label>

            <Button Text="Cerrar"
                    x:Name="CloseBtn"
                    TextColor="White"
                    BackgroundColor="#FF9300"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    HeightRequest="45"
                    WidthRequest="200"
                    Clicked="CloseBtn_OnClicked"
            ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>